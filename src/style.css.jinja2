@charset "utf-8";

/* Web Font */
{% for name, value in settings.fontFamily.items() %}
@import url('{{ value.url }}');
{% endfor %}

html {
  width: 100%;
  height: 100%;
  font-family: {{ settings.fontFamily.sans.cssValue }};
  font-size: 18px;
  font-weight: 300;
  line-height: 1.2;
  word-wrap: break-word;
  word-break: break-word;
}
@media (max-width: 1300px) {
  html {font-size: 17px;}
}
@media (max-width: 800px) {
  html {font-size: 16px;}
}
body {
  position: relative;

  width: 100%;
  min-width: 350px;
  max-width: 100vw;
  min-height: 100vh;

  background-color: {{ var.defaultColor.backCol }};
  background-color: var(--backCol);
  color: {{ var.defaultColor.baseTextCol }};
  color: var(--baseTextCol);
}
body > * {
  position: relative;
}

