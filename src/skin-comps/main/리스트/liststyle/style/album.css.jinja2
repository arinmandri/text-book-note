/**##### 썸네일만 album */
#postList.album .itemHead ,
#postList.album .category ,
#postList.album .itemBody ,
#postList.album .tape {
  display: none;
}
#postList.album {
  text-align: center;
}
#postList.album > */*li*/ {
  margin: 1%;
  display: inline-block;
  border: 2px solid {{ var.defaultColor.listBack }};
  border: 2px solid var(--listBack);
  box-shadow: -1px 2px 5px {{ var.defaultColor.borderCol }};
  box-shadow: -1px 2px 5px var(--borderCol);
  background-color: {{ var.defaultColor.backCol }};
  background-color: var(--backCol);
}
#postList.album > */*li*/:hover {/* 테두리: 마우스 올렸을 때만 */
  border-color: {{ var.defaultColor.borderCol }};
  border-color: var(--borderCol);
}
/* 썸네일 */
#postList.album .thumbnail {
  padding: 5px;
  width: 28vw;
  height: 28vw;
  max-width: 250px;
  max-height: 250px;
  overflow: hidden;
  /* 또 고작 아이템 하나 가운데 오게 하겠다고 거창하게 플렉스를 씁니다~~ 그냥 시벌 세로든 가로든 가운데정렬 속성이나 만들어 줄 것이지. 왜 또 크기가 작은 건 가운데 오게 할 수 있지만 똑같은 요소인데 크기가 크면 그게 안되고 시발 css는 아주 좃갔습니다. */
  display: flex;
  flex-direction: column;
  align-items: center;
}
@media (max-width: 900px) {
  #postList.album .thumbnail {
    padding: 1px;
  }
}
#postList.album .thumbnail img {
  height: 100%;
}
#postList.album .itemHead {
  position: absolute;
  box-sizing: border-box;
  width: 100%;
  bottom: 0px;
  padding: 5px;
  background-color: #0008;
  transition-duration: 2s;
}
#postList.album > */*li*/:hover .itemHead {/* 제목: 마우스 올렸을 때만 나타난다 */
  display: block;
}
#postList.album .itemHead h2 {
  font-family: {{ settings.fontFamily.serif.cssValue }};
  font-size: 120%;
  font-weight: 600;
  color: white;
}
@media (max-width: 900px) {
  #postList.album .itemHead h2 {
    font-size: 100%;
  }
}