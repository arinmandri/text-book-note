
/**### 태그 페이지 */
/* 태그 클래스별 스타일은 랜덤태그 모듈과 같은 스타일 */
#tagBox {
  position: relative;
  width: 100%;
  margin: 0 auto;
  text-align: center;
  line-height: 1.9;
}
#tagBox li {
  display: inline-block;
}
#tagBox a {
  margin: 5px;
  background-color: {{ var.defaultColor.listBack }};
  background-color: var(--listBack);
  border: 2px solid {{ var.defaultColor.borderCol }};
  border: 2px solid var(--borderCol);
  border-radius: 4px;
  padding: 2px 5px;
}
#tagBox .tagcloud1 {
  font-size: 180%;
  color: {{ var.defaultColor.pointCol }};
  color: var(--pointCol);
}
#tagBox .tagcloud2 {
  font-size: 180%;
}
#tagBox .tagcloud3 {
  font-size: 150%;
}
#tagBox .tagcloud4 ,
#tagBox .tagcloud5 {
  display: none;
}

#main4.tagBoxOrdered {
  font-size: 135%;/* 모듈에서보단 좀 크게 보이기 */
}
#main4.tagBoxOrdered .bucket {
  margin-top: 30px;
  margin-bottom: 30px;
  padding: 20px;
}
#main4.tagBoxOrdered h4 {
  font-size: 200%;
  border-bottom: 3px dashed {{ var.defaultColor.borderCol }};
  border-bottom: 3px dashed var(--borderCol);
  font-family: {{ settings.fontFamily.serif.cssValue }};
}
#main4.tagBoxOrdered .list {
  padding: 10px;
  list-style: disc;
  color: {{ var.defaultColor.bonmunTextCol }};
  color: var(--bonmunTextCol);
}
#main4.tagBoxOrdered li {
  margin: 10px;
}