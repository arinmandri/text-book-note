
<variablegroup name="빛깔 (라이트모드)">
	<variable>
		<name>backCol_light</name>
		<label>바닥색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.backCol }}]]></default>
	</variable>
	<variable>
		<name>backImg_light</name>
		<label>바닥 그림</label>
		<type>IMAGE</type>
	</variable>
	<variable>
		<name>backImgType_light</name>
		<label>바닥 그림 놓임새</label>
		<type>SELECT</type>
		<option><![CDATA[{% include "skin-comps/frame/background.json" %}]]></option>
		<default>cover</default>
	</variable>
	<variable>
		<name>baseTextCol_light</name>
		<label>본문외 글자색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.baseTextCol }}]]></default>
	</variable>
	<variable>
		<name>listBack_light</name>
		<label>항목 밑색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.listBack }}]]></default>
	</variable>
	<variable>
		<name>borderCol_light</name>
		<label>금색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.borderCol }}]]></default>
	</variable>
	<variable>
		<name>frameBack_light</name>
		<label>딱지 밑색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.frameBack }}]]></default>
	</variable>
	<variable>
		<name>frameFore_light</name>
		<label>딱지 글자색</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.frameFore }}]]></default>
	</variable>
	<variable>
		<name>pointCol_light</name>
		<label>강조 요소</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.pointCol }}]]></default>
	</variable>
	<variable>
		<name>bonmunTextCol_light</name>
		<label>본문 글자</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.bonmunTextCol }}]]></default>
	</variable>
	<variable>
		<name>bonmunForm_light</name>
		<label>본문 서식요소</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.bonmunForm }}]]></default>
	</variable>
	<variable>
		<name>bonmunActing_light</name>
		<label>본문 상호작용</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.bonmunActing }}]]></default>
	</variable>
	<variable>
		<name>highlight_light</name>
		<label>형광펜</label>
		<type>COLOR</type>
		<default><![CDATA[{{ var.defaultColor.highlight }}]]></default>
	</variable>
</variablegroup>